rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Admin can read all user data
    match /users/{userId} {
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data != null;
    }
    
    // Admins collection - only admins can access
    match /admins/{adminId} {
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data != null;
    }
    
    // Drivers collection - admins can manage, drivers can read their own data
    match /drivers/{driverId} {
      // Admins can read and write all driver data
      allow read, write: if request.auth != null && 
        get(/databases/$(database)/documents/admins/$(request.auth.uid)).data != null;
      
      // Drivers can read their own data (by email match)
      allow read: if request.auth != null && 
        resource.data.email == request.auth.token.email;
    }
  }
} 